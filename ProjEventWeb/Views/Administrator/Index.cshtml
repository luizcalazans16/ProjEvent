<h4 text-align="center">Lista de participantes vs atividades</h4>
<table class="table">
    <thead>
        <tr>
            <th>
                Participante 
            </th>
            <th>
                Evento
            </th>
            <th>
                Data
            </th>
            <th>
                Tipo de atividade
            </th>
            <th>
                Certificado
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
         <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventCertificate)
            </td>
        </tr>   
        }
    </tbody>

</table>

