@model ProjEventWeb.Models.UserEventViewModel

@{
    ViewData["Title"] = "Details";
}

<h2>Confirmação da compra</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Descrição
            </th>
            <th>
                Categoria
            </th>
            <th>
                Detalhes
            </th>
            <th>
                Data
            </th>
            <th>
                Preço
            </th>
        </tr>
    </thead>
<tbody>
      <tr>
          <td>
              @Model.Event.Description
          </td>
          <td>
              @Model.Event.Category
          </td>
          <td>
              @Model.Event.Details
          </td>
          <td>
              @Model.Event.Date
          </td>
          <td>
              @Model.Event.Price
          </td>
      </tr>  

</tbody>
</table>
<div class="form-group form-check">
    <label class="form-check-label">Deseja receber certificado?>
        <br>
    <input class="form-check-input" type="checkbox" asp-for"UserEvent.Certificate" />
    </label>
</div>

<div class="form-group">
    <label name="Pagamento" class="control-label">Pagamento</label>
    <input class="form-control"/>
</div>

    <form asp-action="BuyTicket">
        @Html.Hidden("eventId", Model.Event.Id)
        @Html.Hidden("userId", Model.UserEvent.UserId)
        @Html.Hidden("ceritificate", Model.UserEvent.Certificate)
        <input type="submit" value="Finalizar compra" class="btn btn-primary" />
    </form>

