@model ProjEventWeb.Models.EventCategoryViewModel


@{
    ViewData["Title"] = "Index";
}

<h1>Atividades</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Descrição
            </th>
            <th>
                Data
            </th>
            <th>
                Tipo de atividade
            </th>
            <th>
                Preço
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Events) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>

            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
               <button type="button" onclick="alert(Entrada adquirida com sucesso!)">Comprar entrada</button>        
            </td>
        </tr>
}
        
 
    </tbody>
</table>